<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MainFragment"
    android:background="#062350">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/scan"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/guideline2"
        app:layout_constraintBottom_toBottomOf="@id/guideline3">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="10dp"
          android:orientation="horizontal">
          <RelativeLayout
              android:id="@+id/ry_phone_number"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content">
              <ImageView
                  android:id="@+id/img1"
                  android:layout_width="50dp"
                  android:layout_height="50dp"
                  android:layout_centerHorizontal="true"
                  android:tint="@color/colorPrimary"
                  android:src="@drawable/www"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Scan \n Phone Number"
                  android:textAlignment="center"
                  android:layout_below="@id/img1"
                  android:layout_centerHorizontal="true"
                  android:textColor="@color/colorPrimary"/>
          </RelativeLayout>
          <RelativeLayout
              android:id="@+id/ry_airtime"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content">
              <ImageView
                  android:id="@+id/img2"
                  android:layout_width="50dp"
                  android:layout_height="50dp"
                  android:layout_centerHorizontal="true"
                  android:tint="@color/colorPrimary"
                  android:src="@drawable/www"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Scan \n Airtime Pin"
                  android:textAlignment="center"
                  android:layout_below="@id/img2"
                  android:layout_centerHorizontal="true"
                  android:textColor="@color/colorPrimary"/>
          </RelativeLayout>
          <RelativeLayout
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content">
              <ImageView
                  android:id="@+id/img3"
                  android:layout_width="50dp"
                  android:layout_height="50dp"
                  android:layout_centerHorizontal="true"
                  android:tint="@color/colorPrimary"
                  android:src="@drawable/www"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Scan \n Account Number"
                  android:textAlignment="center"
                  android:layout_below="@id/img3"
                  android:layout_centerHorizontal="true"
                  android:textColor="@color/colorPrimary"/>
          </RelativeLayout>
      </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/ry_email_address"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/www"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan \n Email Address"
                    android:textAlignment="center"
                    android:layout_below="@id/img4"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorPrimary"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/ry_website"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/www"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan \n Website Url"
                    android:textAlignment="center"
                    android:layout_below="@id/img5"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorPrimary"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/www"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan \n Documents"
                    android:textAlignment="center"
                    android:layout_below="@id/img6"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorPrimary"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/ry_bar_code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img7"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/www"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan \n Bar Code"
                    android:textAlignment="center"
                    android:layout_below="@id/img7"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorPrimary"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"/>

</androidx.constraintlayout.widget.ConstraintLayout>